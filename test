local library = {}
local UIS = game:GetService("UserInputService")

-- Criação de janela principal
function library:CreateWindow(title)
    local gui = Instance.new("ScreenGui")
    local mainFrame = Instance.new("Frame")
    local titleBar = Instance.new("TextLabel")

    -- Configurações da ScreenGui
    gui.Name = "CustomUI"
    gui.Parent = game:GetService("CoreGui")
    gui.ResetOnSpawn = false

    -- Configurações da Janela Principal
    mainFrame.Name = "MainFrame"
    mainFrame.Size = UDim2.new(0, 400, 0, 300)
    mainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
    mainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    mainFrame.BorderSizePixel = 0
    mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    mainFrame.Active = true
    mainFrame.Draggable = true
    mainFrame.Parent = gui

    -- Configuração do Título
    titleBar.Name = "TitleBar"
    titleBar.Size = UDim2.new(1, 0, 0, 30)
    titleBar.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    titleBar.TextColor3 = Color3.fromRGB(255, 255, 255)
    titleBar.Font = Enum.Font.GothamBold
    titleBar.TextSize = 16
    titleBar.Text = title
    titleBar.Parent = mainFrame

    local sectionList = {}

    -- Função para criar seções
    function library:CreateSection(sectionTitle)
        local section = Instance.new("Frame")
        local label = Instance.new("TextLabel")

        section.Size = UDim2.new(1, -10, 0, 100)
        section.Position = UDim2.new(0, 5, 0, 40 + #sectionList * 110)
        section.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
        section.BorderSizePixel = 0
        section.Parent = mainFrame

        label.Size = UDim2.new(1, 0, 0, 30)
        label.BackgroundTransparency = 1
        label.TextColor3 = Color3.fromRGB(255, 255, 255)
        label.Font = Enum.Font.Gotham
        label.TextSize = 14
        label.Text = sectionTitle
        label.Parent = section

        table.insert(sectionList, section)
        return section
    end

    return gui
end

-- Função para criar um botão
function library:CreateButton(section, text, callback)
    local button = Instance.new("TextButton")

    button.Size = UDim2.new(1, -10, 0, 30)
    button.Position = UDim2.new(0, 5, 0, 35)
    button.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.Gotham
    button.TextSize = 14
    button.Text = text
    button.Parent = section

    button.MouseButton1Click:Connect(callback)
end

-- Função para criar um toggle
function library:CreateToggle(section, text, callback)
    local toggle = Instance.new("TextButton")
    local state = false

    toggle.Size = UDim2.new(1, -10, 0, 30)
    toggle.Position = UDim2.new(0, 5, 0, 70)
    toggle.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
    toggle.Font = Enum.Font.Gotham
    toggle.TextSize = 14
    toggle.Text = text .. ": OFF"
    toggle.Parent = section

    toggle.MouseButton1Click:Connect(function()
        state = not state
        toggle.Text = text .. (state and ": ON" or ": OFF")
        callback(state)
    end)
end

return library
