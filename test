local TweenService = game:GetService("TweenService")
function Notify(text, duration)
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "NotifyGui"
    screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    local notifyFrame = Instance.new("Frame")
    notifyFrame.Size = UDim2.new(0.3, 0, 0.07, 0)
    notifyFrame.Position = UDim2.new(0.35, 0, 0.8, 0)
    notifyFrame.BackgroundColor3 = Color3.new(0, 0, 0)
    notifyFrame.BackgroundTransparency = 0.4
    notifyFrame.BorderSizePixel = 0
    notifyFrame.Parent = screenGui

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0.4, 0)
    corner.Parent = notifyFrame

    local notifyText = Instance.new("TextLabel")
    notifyText.Size = UDim2.new(1, 0, 1, 0)
    notifyText.BackgroundTransparency = 1
    notifyText.TextColor3 = Color3.new(1, 1, 1)
    notifyText.TextScaled = true
    notifyText.Font = Enum.Font.SourceSansBold
    notifyText.Text = text
    notifyText.Parent = notifyFrame

    notifyFrame.Position = UDim2.new(0.35, 0, 1.2, 0)
    local enterTween = TweenService:Create(notifyFrame, TweenInfo.new(0.5), { Position = UDim2.new(0.35, 0, 0.8, 0) })
    enterTween:Play()

    wait(duration)

    local exitTween = TweenService:Create(notifyFrame, TweenInfo.new(0.5), { Position = UDim2.new(0.35, 0, 1.2, 0) })
    exitTween:Play()

    exitTween.Completed:Connect(function()
        screenGui:Destroy()
    end)
end
